<?xml version="1.0"?>

<molsim xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="src/XMLReader/MolSim.xsd">

    <input_file>../input.txt</input_file>

    <delta_t>0.001</delta_t>

    <end_time>500</end_time>

    <output_step>100</output_step>

    <epsilon>1</epsilon>

    <sigma>1</sigma>

    <gravity>-0.001</gravity>

    <averageV>0</averageV>

    <algorithm>lj</algorithm>

    <simulationContainer>
        <boundaryConditions>
            <xBoundary>1</xBoundary>
            <yBoundary>1</yBoundary>
            <zBoundary>1</zBoundary>
        </boundaryConditions>
        <dimension>
            <x>148</x>
            <y>148</y>
            <z>148</z>
        </dimension>
        <mesh>4</mesh>
        <cutOff>4</cutOff>
        <containerAlgorithm>linkedCells</containerAlgorithm>
    </simulationContainer>

    <particles>
    </particles>

    <thermostats>
        <initialTemperature>80</initialTemperature>
        <targetTemperature>80</targetTemperature>
        <maxDelta>-1</maxDelta>
        <stepSize>1000</stepSize>
    </thermostats>

    <parallelizationStrategy>1</parallelizationStrategy>

    <benchmark>no</benchmark>

</molsim>