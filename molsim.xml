<?xml version="1.0"?>

<molsim xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="src/XMLReader/MolSim.xsd">

    <input_file>../input.txt</input_file>

    <delta_t>0.0005</delta_t>

    <end_time>10</end_time>

    <output_step>100</output_step>

    <epsilon>5</epsilon>

    <sigma>1</sigma>

    <gravity>-12.44</gravity>

    <averageV>0.7</averageV>

    <algorithm>lj</algorithm>

    <simulationContainer>
        <boundaryConditions>
            <xBoundary>2</xBoundary>
            <yBoundary>1</yBoundary>
            <zBoundary>0</zBoundary>
        </boundaryConditions>
        <dimension>
            <x>64</x>
            <y>30</y>
            <z>0</z>
        </dimension>
        <mesh>3</mesh>
        <cutOff>3</cutOff>
        <containerAlgorithm>linkedCells</containerAlgorithm>
    </simulationContainer>

    <particles>
        <Cube>
            <dimension>
                <x>50</x>
                <y>14</y>
                <z>1</z>
            </dimension>
            <startPoint>
                <x>5.6</x>
                <y>7</y>
                <z>0</z>
            </startPoint>
            <h>1.2</h>
            <mass>1</mass>
            <velocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </velocity>
            <epsilon>1</epsilon>
            <sigma>1</sigma>
        </Cube>
        <Cube>
            <dimension>
                <x>50</x>
                <y>14</y>
                <z>1</z>
            </dimension>
            <startPoint>
                <x>5.6</x>
                <y>24</y>
                <z>0</z>
            </startPoint>
            <h>1.2</h>
            <mass>2</mass>
            <velocity>
                <x>0</x>
                <y>0</y>
                <z>0</z>
            </velocity>
            <epsilon>1</epsilon>
            <sigma>0.9412</sigma>
        </Cube>
    </particles>

    <thermostats>
        <initialTemperature>0.5</initialTemperature>
        <targetTemperature>0.5</targetTemperature>
        <maxDelta>-1</maxDelta>
        <stepSize>1000</stepSize>
    </thermostats>

    <parallelizationStrategy>1</parallelizationStrategy>

    <benchmark>no</benchmark>

</molsim>